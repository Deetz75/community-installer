{
    "database": {
        "rules": "database.rules.json"
    },
    "hosting": {
        "public": "public",
        "headers": [
            {
                "source": "*.js",
                "headers": [
                    {
                        "key": "Access-Control-Allow-Origin",
                        "value": "*"
                    },
                    {
                        "key": "Cache-Control",
                        "value": "no-store"
                    }
                ]
            }
        ],
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ]
    }
}
